<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.nastya.dailyquiz.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_blankHistoryFragment"
            app:destination="@id/blankHistoryFragment" />
        <action
            android:id="@+id/action_startFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_startFragment_to_filterQuizFragment"
            app:destination="@id/filterQuizFragment">
        </action>
    </fragment>
    <fragment
        android:id="@+id/loadFragment"
        android:name="com.nastya.dailyquiz.LoadFragment"
        android:label="fragment_load"
        tools:layout="@layout/fragment_load" >
        <action
            android:id="@+id/action_loadFragment_to_questionFragment"
            app:destination="@id/questionFragment">
            <argument
                android:name="questions"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.nastya.dailyquiz.QuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question" >
        <action
            android:id="@+id/action_questionFragment_to_startFragment2"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_questionFragment_to_resultFragment"
            app:destination="@id/resultFragment">
            <argument
                android:name="questions"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.nastya.dailyquiz.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/blankHistoryFragment"
        android:name="com.nastya.dailyquiz.BlankHistoryFragment"
        android:label="fragment_blank_history"
        tools:layout="@layout/fragment_blank_history" >
        <action
            android:id="@+id/action_blankHistoryFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.nastya.dailyquiz.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/filterQuizFragment"
        android:name="com.nastya.dailyquiz.FilterQuizFragment"
        android:label="fragment_filter_quiz"
        tools:layout="@layout/fragment_filter_quiz" >
        <action
            android:id="@+id/action_filterQuizFragment_to_loadFragment"
            app:destination="@id/loadFragment">
            <argument
                android:name="questions_category_id"
                app:argType="integer" />
            <argument
                android:name="questions_difficulty"
                app:argType="string" />
        </action>
    </fragment>
</navigation>